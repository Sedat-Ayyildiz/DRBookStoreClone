<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="İkinci el kitap satış sitesi." />
    <meta name="author" content="Sedat Ayyıldız" />
    <title>D&R | KİTAP SATIŞ</title>
    <!-- Favicon-->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/Templates/Content/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/Home/Index/">D&R | Kitap Satış</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="/Home/Index/">Kitaplar</a></li>
                    <li class="nav-item dropdown nav-item-none">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Filtrele</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><p class="ms-1">Fiyata Göre</p></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Home/ArtanFiyat">Artan Fiyat</a></li>
                            <li><a class="dropdown-item" href="/Home/AzalanFiyat">Azalan Fiyat</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><p class="ms-1">Tarihe Göre</p></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Home/EnYeniler">En Yeniler</a></li>
                            <li><a class="dropdown-item" href="/Home/EnEskiler">En Eskiler</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><p class="ms-1">Kategorilere Göre</p></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Home/AdanZye">A'dan Z'ye</a></li>
                            <li><a class="dropdown-item" href="/Home/ZdenAya">Z'den A'ya</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/About/Index">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contact/Index">İletişim</a></li>
                    @if (User.IsInRole("A"))
                    {
                        <li class="nav-item"><a class="nav-link" href="/Home/KitapListele">Admin Paneli</a></li>
                    }
                </ul>
                @if (User.IsInRole("A") || User.IsInRole("M"))
                {
                    <form class="d-flex">
                        <a class="btn btn-outline-dark" href="/Orders/Index">
                            <i class="bi-cart-fill me-1"></i>
                            Sepet
                        </a>
                    </form>
                }
                <ul class="navbar-nav">
                    <li class="nav-item dropdown ms-2">
                        <a class="dropdown-toggle btn btn-outline-dark" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sistem Aktive</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a class="dropdown-item" href="/Admin/Logout">Çıkış Yap</a></li>
                            }
                            else
                            {
                                if (!User.IsInRole("A") || !User.IsInRole("M") || !User.IsInRole("K"))
                                {
                                    <li><a class="dropdown-item" href="/Admin/Index">Giriş Yap</a></li>
                                }
                            }
                        </ul>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="ms-2">
                            <a class="btn btn-outline-dark" href="#" role="button">Hoş Geldin | @HttpContext.Current.User.Identity.Name</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <!--Content-->
    @RenderBody()
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>

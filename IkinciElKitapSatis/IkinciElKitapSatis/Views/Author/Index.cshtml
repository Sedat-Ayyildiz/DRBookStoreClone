@using IkinciElKitapSatis.Models
@model List<YAZARLAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content" class="mt-3">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    <span class="fs-3">Yazar Listesi</span>
                    <a class="btn btn-primary ms-2 mb-2" href="/Author/YazarEkle">Yeni Yazar Ekle</a>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Yazar Id</th>
                                <th>Yazar Ad</th>
                                <th>Ulus</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Yazar Id</th>
                                <th>Yazar Ad</th>
                                <th>Ulus</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var yazarlarlistesi in Model)
                            {
                                <tr>
                                    <td>@yazarlarlistesi.YAZARID</td>
                                    <td>@yazarlarlistesi.YAZARADI</td>
                                    <td>@yazarlarlistesi.ULUS</td>
                                    <td><a href="/Author/YazarSil/@yazarlarlistesi.YAZARID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Author/YazarGetir/@yazarlarlistesi.YAZARID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
</div>
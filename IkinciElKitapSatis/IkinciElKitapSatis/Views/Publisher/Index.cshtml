@using IkinciElKitapSatis.Models
@model List<YAYINEVLERI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content" class="mt-3">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    <span class="fs-3">Yayınevi Listesi</span>
                    <a class="btn btn-primary ms-2 mb-2" href="/Publisher/YayineviEkle">Yeni Yayınevi Ekle</a>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Yayınevi Id</th>
                                <th>Yayınevi Adı</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>E-Posta</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Yayınevi Id</th>
                                <th>Yayınevi Adı</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>E-Posta</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var yayinevilistesi in Model)
                            {
                                <tr>
                                    <td>@yayinevilistesi.YAYINEVIID</td>
                                    <td>@yayinevilistesi.YAYINEVIADI</td>
                                    <td>@yayinevilistesi.ADRES</td>
                                    <td>@yayinevilistesi.TELEFON</td>
                                    <td>@yayinevilistesi.EPOSTA</td>
                                    <td><a href="/Publisher/YayineviSil/@yayinevilistesi.YAYINEVIID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Publisher/YayineviGetir/@yayinevilistesi.YAYINEVIID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
</div>
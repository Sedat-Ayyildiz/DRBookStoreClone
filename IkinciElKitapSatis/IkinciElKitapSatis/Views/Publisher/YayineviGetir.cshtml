@model IkinciElKitapSatis.Models.YAYINEVLERI

@{
    ViewBag.Title = "YayineviGetir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="container">
    <div id="layoutSidenav_content" class="mt-3">
        <main>
            <div class="container px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas bi-book me-1"></i>
                        <span class="fs-3">Yayınevi Güncelleme Sayfası</span>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("YayineviGuncelle", "Publisher", FormMethod.Post))
                        {
                            @Html.HiddenFor(s => s.YAYINEVIID)
                            @Html.LabelFor(s => s.YAYINEVIADI)
                            @Html.TextBoxFor(s => s.YAYINEVIADI, new { @class = "form-control" })
                            <br />
                            @Html.LabelFor(s => s.ADRES)
                            @Html.TextBoxFor(s => s.ADRES, new { @class = "form-control" })
                            <br />
                            @Html.LabelFor(s => s.TELEFON)
                            @Html.TextBoxFor(s => s.TELEFON, new { @class = "form-control" })
                            <br />
                            @Html.LabelFor(s => s.EPOSTA)
                            @Html.TextBoxFor(s => s.EPOSTA, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/Publisher/Index" class="btn btn-outline-danger">Vazgeç</a>
                        }
                    </div>
                </div>
            </div>
        </main>
        <!--FOOTER-->
        @Html.Partial("_PartialFooter")
    </div>
</body>
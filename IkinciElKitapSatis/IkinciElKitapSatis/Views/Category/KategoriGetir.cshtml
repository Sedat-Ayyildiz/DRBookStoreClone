@model IkinciElKitapSatis.Models.KATEGORILER

@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="container">
    <div id="layoutSidenav_content" class="mt-3">
        <main>
            <div class="container px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas bi-book me-1"></i>
                        <span class="fs-3">Kategori Güncelleme Sayfası</span>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("KategoriGuncelle", "Category", FormMethod.Post))
                        {
                            @Html.HiddenFor(s => s.KATEGORIID)
                            @Html.LabelFor(s => s.KATEGORIAD)
                            @Html.TextBoxFor(s => s.KATEGORIAD, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/Category/Index" class="btn btn-outline-danger">Vazgeç</a>
                        }
                    </div>
                </div>
            </div>
        </main>
        <!--FOOTER-->
        @Html.Partial("_PartialFooter")
    </div>
</body>
@using IkinciElKitapSatis.Models
@model List<KATEGORILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content" class="mt-3">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    <span class="fs-3">Kategori Listesi</span>
                    <a class="btn btn-primary ms-2 mb-2" href="/Category/KategoriEkle">Yeni Kategori Ekle</a>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Kategori Id</th>
                                <th>Kategori Ad</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Kategori Id</th>
                                <th>Kategori Ad</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var kategorilistesi in Model)
                            {
                                <tr>
                                    <td>@kategorilistesi.KATEGORIID</td>
                                    <td>@kategorilistesi.KATEGORIAD</td>
                                    <td><a href="/Category/KategoriSil/@kategorilistesi.KATEGORIID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Category/KategoriGetir/@kategorilistesi.KATEGORIID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
</div>
@model IkinciElKitapSatis.Models.KATEGORILER

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="container">
    <div id="layoutSidenav_content" class="mt-3">
        <main>
            <div class="container px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas bi-book me-1"></i>
                        <span class="fs-3">Kategori Ekleme Sayfası</span>
                    </div>
                    <div class="card-body">
                        <form action="/Category/KategoriEkle" method="post">
                            <input type="hidden" name="KATEGORIID" class="form-control"/><br />
                            <input type="text" name="KATEGORIAD" class="form-control" placeholder="Kategori Adı" /><br />
                            <button class="btn btn-info" type="submit">Kaydet</button>
                            <a href="/Category/Index" class="btn btn-outline-warning">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <!--FOOTER-->
        @Html.Partial("_PartialFooter")
    </div>
</body>
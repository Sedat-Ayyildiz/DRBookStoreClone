@using IkinciElKitapSatis.Models
@model List<HAKKIMIZDA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .nav-item-none {
        display: none;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Vendor CSS Files -->
    <link href="/Templates/About/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/Templates/About/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="/Templates/About/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="/Templates/About/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="/Templates/About/assets/css/main.css" rel="stylesheet">
</head>
<body>
    <section id="hero-animated" class="hero-animated d-flex align-items-center">
        <div class="container d-flex flex-column justify-content-center align-items-center text-center position-relative" data-aos="zoom-out">
            <img src="/Templates/About/assets/img/hero-carousel/hero-carousel-3.svg" class="img-fluid animated">
            <h2>Jet Hızında Kitap Al - Sat</h2>
            <p>"Okuyarak Yükselen Ruhların Buluşma Noktası : D&R | Kitap Satış !"</p>
        </div>
    </section>

    <main id="main">
        <!-- ======= Featured Services Section ======= -->
        <section id="featured-services" class="featured-services">
            <div class="container">
                <div class="row gy-4 justify-content-center">
                    <div class="col-xl-3 col-md-6 d-flex" data-aos="zoom-out" data-aos-delay="200">
                        <div class="service-item position-relative">
                            <div class="icon"><i class="bi bi-bounding-box-circles icon"></i></div>
                            <h4><a href="#" class="stretched-link">Kaliteli Ürün</a></h4>
                            <p>Kaliteli ürün sunma başarının anahtarıdır. Müşteri memnuniyetini sağlar, güven oluşturur ve rekabet üstünlüğü kazandırır. Sürekli kalite odaklanması önemlidir</p>
                        </div>
                    </div><!-- End Service Item -->

                    <div class="col-xl-3 col-md-6 d-flex" data-aos="zoom-out" data-aos-delay="400">
                        <div class="service-item position-relative">
                            <div class="icon"><i class="bi bi-calendar4-week icon"></i></div>
                            <h4><a href="#" class="stretched-link">Planlı Sistem</a></h4>
                            <p>Planlı sistem, etkin ve düzenli çalışmayı sağlar. Hedeflere yönlendirir, kaynakları verimli kullanır ve süreçleri optimize eder. Başarı için planlı sistem önemlidir</p>
                        </div>
                    </div><!-- End Service Item -->

                    <div class="col-xl-3 col-md-6 d-flex" data-aos="zoom-out" data-aos-delay="600">
                        <div class="service-item position-relative">
                            <div class="icon"><i class="bi bi-broadcast icon"></i></div>
                            <h4><a href="#" class="stretched-link">Güvenli Alışveriş Ağı</a></h4>
                            <p>Güvenli alışveriş ağı, müşterilerin kişisel bilgilerini korur ve online alışverişi güvenli hale getirir. Şifreleme ve sıkı güvenlik önlemleriyle veri güvenliği sağlanır</p>
                        </div>
                    </div><!-- End Service Item -->
                </div>
            </div>
        </section><!-- End Featured Services Section -->
        <!-- ======= About Section ======= -->
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">
                <div class="section-header">
                    <h2 class="fw-bolder">Biz Kimiz ?</h2>
                </div>
                <div class="row g-4 g-lg-5" data-aos="fade-up" data-aos-delay="200">
                    <div class="col-lg-5">
                        <div class="about-img">
                            <img src="https://i.hizliresim.com/2px48s2.png" class="img-fluid" alt="">
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <!-- Tab Content -->
                        <div class="tab-content">
                            <div>
                                <h3 class="fst-italic fw-semibold">6 Madde'de D&R | Kitap Satış</h3>
                                @foreach (var aciklama in Model)
                                {
                                    <div class="d-flex align-items-center mt-4">
                                        <i class="bi bi-check2"></i>
                                        <h5 class="fw-normal">@aciklama.HAKKIMIZDAACIKLAMA</h5>
                                    </div>
                                }
                            </div><!-- End Tab 1 Content -->
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End About Section -->
        <!-- ======= Clients Section ======= -->
        <section id="clients" class="clients">
            <div class="container" data-aos="zoom-out">
                <div class="clients-slider swiper">
                    <h2 class="text-center mb-2 fst-italic text-decoration-underline">Sponsorlarımız</h2>
                    <div class="swiper-wrapper align-items-center">
                        @foreach (var sponsorlar in Model)
                        {
                            <div class="swiper-slide"><img src="/Templates/About/assets/img/clients/@sponsorlar.SPONSORRESIM" class="img-fluid" alt="@sponsorlar.SPONSORISIM"></div>
                        }
                    </div>
                </div>
            </div>
        </section><!-- End Clients Section -->
    </main><!-- End #main -->
    <!--Footer-->
    @Html.Partial("_PartialFooter")
    <!-- Vendor JS Files -->
    <script src="/Templates/About/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Templates/About/assets/vendor/aos/aos.js"></script>
    <script src="/Templates/About/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/Templates/About/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/Templates/About/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="/Templates/About/assets/js/main.js"></script>
</body>
</html>
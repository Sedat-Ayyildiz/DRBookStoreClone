@using IkinciElKitapSatis.Models
@model List<SIPARISLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="/Templates/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .nav-item-none {
            display: none;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <div id="layoutSidenav_content" class="mt-3">
        <main>
            <div class="container-fluid px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        <span class="fs-3">Siparişlerim</span>
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    @*<th>Kullanıcı</th>*@
                                    <th>Tarih</th>
                                    <th>Kitap</th>
                                    <th>Birim Tutar</th>
                                    <th>Adet</th>
                                    <th>Toplam Tutar</th>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>E-Posta</th>
                                    <th>Sipariş İptal Et</th>
                                    <th>Sipariş Onayla</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    @*<th>Kullanıcı</th>*@
                                    <th>Tarih</th>
                                    <th>Kitap</th>
                                    <th>Birim Tutar</th>
                                    <th>Adet</th>
                                    <th>Toplam Tutar</th>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>E-Posta</th>
                                    <th>Sipariş İptal Et</th>
                                    <th>Sipariş Onayla</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var siparislerlistesi in Model)
                                {
                                    <tr>
                                        <td>@siparislerlistesi.SIPARISID</td>
                                        @*<td>@siparislerlistesi.KULLANICILAR.KULLANICIID</td>*@
                                        <td>@siparislerlistesi.TARIH</td>
                                        <td>@siparislerlistesi.KITAPLAR.KITAPADI</td>
                                        <td>@siparislerlistesi.BIRIMTUTAR</td>
                                        <td>@siparislerlistesi.ADET</td>
                                        <td>@siparislerlistesi.TOPLAMTUTAR</td>
                                        <td>@siparislerlistesi.ADRES</td>
                                        <td>@siparislerlistesi.TELEFON</td>
                                        <td>@siparislerlistesi.EPOSTA</td>
                                        <td><a href="/Orders/SiparisSil/@siparislerlistesi.SIPARISID" class="btn btn-danger">İptal Et</a></td>
                                        <td><a href="/Orders/SiparisGetir/@siparislerlistesi.SIPARISID" class="btn btn-success">Onayla</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/Templates/Admin/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="/Templates/Admin/js/datatables-simple-demo.js"></script>
</body>
</html>
@using IkinciElKitapSatis.Models
@model List<ILETISIM> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .nav-item-none {
        display: none;
    }
</style>

<link style="" href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap"/>

<!Doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/Templates/Contact/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="bg-background"></div>
    <div class="container py-5 yazi">
        @Html.Action("Contact")

        <div class="row-last">
            <div class="text-center p-3 text-white fw-bolder fs-3 text-decoration-underline f">İletişim Bilgileri</div>
            @foreach (var iletisim in Model)
            {
                <div class="row row-cols-1 row-cols-md-3  p-3 text-white">                    
                    <div class="col mb-2">
                        <h4 class="text-decoration-underline fst-italic">Telefon Numarası</h4>
                        <p>+@iletisim.ILETISIMTEL</p>
                    </div>
                    <div class="col mb-2">
                        <h4 class="text-decoration-underline fst-italic">Adres</h4>
                        <p>@iletisim.ILETISIMADRES</p>
                    </div>
                    <div class="col mb-2">
                        <h4 class="text-decoration-underline fst-italic">Mail Adresi</h4>
                        <p>@iletisim.ILETISIMMAIL</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="mt-3">@Html.Partial("_PartialFooter")</div>
</body>
</html>

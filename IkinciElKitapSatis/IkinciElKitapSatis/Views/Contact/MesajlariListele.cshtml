@using IkinciElKitapSatis.Models
@model List<MESAJLAR>

@{
    ViewBag.Title = "MesajlariListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content" class="mt-3">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    <span class="fs-3">Mesajlar Listesi</span>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ad Soyad</th>
                                <th>Mail</th>
                                <th>Mesaj</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Ad Soyad</th>
                                <th>Mail</th>
                                <th>Mesaj</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var mesajlarlistesi in Model)
                            {
                                <tr>
                                    <td>@mesajlarlistesi.MESAJID</td>
                                    <td>@mesajlarlistesi.ADSOYAD</td>
                                    <td>@mesajlarlistesi.MAIL</td>
                                    <td>@mesajlarlistesi.MESAJ</td>
                                    <td>@mesajlarlistesi.TARIH</td>
                                    <td><a href="/Contact/MesajSil/@mesajlarlistesi.MESAJID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
</div>
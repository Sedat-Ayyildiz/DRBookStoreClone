@using IkinciElKitapSatis.Models
@model List<ILETISIM>

@{
    ViewBag.Title = "IletisimListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content" class="mt-3">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    <span class="fs-3">İletişim Bilgileri</span>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>Mail</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>Mail</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var iletisimlistesi in Model)
                            {
                                <tr>
                                    <td>@iletisimlistesi.ILETISIMID</td>
                                    <td>@iletisimlistesi.ILETISIMADRES</td>
                                    <td>@iletisimlistesi.ILETISIMTEL</td>
                                    <td>@iletisimlistesi.ILETISIMMAIL</td>
                                    <td><a href="/Contact/IletisimGetir/@iletisimlistesi.ILETISIMID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
</div>
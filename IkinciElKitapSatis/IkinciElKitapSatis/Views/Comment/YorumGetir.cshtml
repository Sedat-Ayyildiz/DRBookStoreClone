@model IkinciElKitapSatis.Models.YORUMLAR

@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="container">
    <div id="layoutSidenav_content" class="mt-3">
        <main>
            <div class="container px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas bi-book me-1"></i>
                        <span class="fs-3">Yorum Güncelleme Sayfası</span>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("YorumGuncelle", "Comment", FormMethod.Post))
                        {
                            @Html.HiddenFor(s => s.YORUMID)
                            @Html.LabelFor(s => s.YORUM)
                            @Html.TextBoxFor(s => s.YORUM, new { @class = "form-control" })
                            <br />
                            @Html.LabelFor(s => s.TARIH)
                            @Html.TextBoxFor(s => s.TARIH, new { @class = "form-control",type="datetime-local" })
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/Comment/YorumlariListele" class="btn btn-outline-danger">Vazgeç</a>
                        }
                    </div>
                </div>
            </div>
        </main>
        <!--FOOTER-->
        @Html.Partial("_PartialFooter")
    </div>
</body>
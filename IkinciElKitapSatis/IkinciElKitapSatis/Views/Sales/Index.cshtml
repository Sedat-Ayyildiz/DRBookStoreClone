@using IkinciElKitapSatis.Models
@model List<SATISLAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content" class="mt-3">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    <span class="fs-3">Satışlarım</span>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Satıs Id</th>
                                <th>Sipariş Id</th>
                                <th>Kullanıcı Id</th>
                                <th>Tarih</th>
                                <th>Toplam Tutar</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Satıs Id</th>
                                <th>Sipariş Id</th>
                                <th>Kullanıcı Id</th>
                                <th>Tarih</th>
                                <th>Toplam Tutar</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var satislarlistesi in Model)
                            {
                                <tr>
                                    <td>@satislarlistesi.SATISID</td>
                                    <td>@satislarlistesi.SIPARISID</td>
                                    <td>@satislarlistesi.KULLANICIID</td>
                                    <td>@satislarlistesi.TARIH</td>
                                    <td>@satislarlistesi.TOPLAMTUTAR ₺</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <!--FOOTER-->
    @Html.Partial("_PartialFooter")
</div>